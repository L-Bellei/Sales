@model IEnumerable<Sales.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1 class="text-center" style="padding-bottom: 25px">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Insert new Seller</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark">
            <th scope="row">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>