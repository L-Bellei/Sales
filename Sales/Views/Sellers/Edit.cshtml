@model Sales.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="title-text">Edit a Seller</h1>

<h4 style="padding-bottom:15px">Seller</h4>
<hr />

<div>
    <div class="form-row col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label asp-for="Seller.Name" class="form-text control-label" style="padding-top:10px"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="form-text control-label" style="padding-top:10px"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="form-text control-label" style="padding-top:10px"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="form-text control-label" style="padding-top:10px"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="form-text control-label" style="padding-top:10px"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))"
                        class="form-control"></select>
            </div>
            <div class="btn-group" style="padding-top:10px" role="group" aria-label="Basic radio toggle button group">
                <input type="submit" value="Save" class="btn btn-dark" style="padding-top: 10px" />
                <a asp-action="Index" class="btn btn-dark">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}